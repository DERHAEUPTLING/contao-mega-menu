{
    "name": "derhaeuptling/contao-mega-menu",
    "description": "Mega menu extension for Contao Open Source CMS",
    "keywords": ["contao", "mega", "menu", "mega menu", "navigation"],
    "type": "contao-module",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "derhaeuptling",
            "homepage": "https://derhaeuptling.com"
        },
        {
            "name": "Kamil Kuzminski",
            "email": "kamil.kuzminski@codefog.pl",
            "homepage": "https://codefog.pl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4",
        "contao/core-bundle": "~4.4",
        "contao-community-alliance/composer-plugin": "~2.4 || ~3.0"
    },
    "autoload": {
        "psr-0": {
            "Derhaeuptling\\MegaMenu\\": "src/"
        }
    },
    "replace": {
        "contao-legacy/mega_menu": "self.version"
    },
    "extra": {
        "contao": {
            "sources": {
                "": "system/modules/mega_menu"
            }
        }
    }
}
